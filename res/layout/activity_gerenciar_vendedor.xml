<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textViewGerenciarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/gerenciarVendedor"
        android:textColor="@color/Black"
        android:textSize="@dimen/tamanhoDaFonte" />

    <TextView
        android:id="@+id/textViewExcluirClienteGerenciarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewBuscarClienteGerenciarCliente"
        android:layout_alignBottom="@+id/textViewBuscarClienteGerenciarCliente"
        android:layout_alignRight="@+id/textViewAtualizarClienteGerenciarCliente"
        android:text="@string/excluirVendedor"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewAtualizarClienteGerenciarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonCadastrarVendedorTelaGerenciarCliente"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:text="@string/atualizarVendedor"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewNovoVendedorGerenciarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAtualizarClienteGerenciarCliente"
        android:layout_alignBottom="@+id/textViewAtualizarClienteGerenciarCliente"
        android:layout_alignParentLeft="true"
        android:text="@string/cadastrarVendedor"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewBuscarClienteGerenciarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewBuscarVendedorGerenciarVendedor"
        android:layout_alignRight="@+id/textViewNovoVendedorGerenciarVendedor"
        android:layout_marginBottom="14dp"
        android:text="@string/buscarVendedor"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/imageButtonCadastrarVendedorTelaGerenciarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewBuscarClienteGerenciarCliente"
        android:layout_alignTop="@+id/imageButtonAtualizarVendedorTelaGerenciarVendedor"
        android:layout_marginLeft="14dp"
        android:onClick="casdastrarVendedor"
        android:src="@drawable/novo_cliente" />

    <ImageButton
        android:id="@+id/textViewBuscarVendedorGerenciarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonCadastrarVendedorTelaGerenciarCliente"
        android:layout_alignTop="@+id/textViewExcluirVendedorGerenciarVendedor"
        android:onClick="buscarCLiente"
        android:src="@drawable/buscar_pessoa" />

    <ImageButton
        android:id="@+id/imageButtonAtualizarVendedorTelaGerenciarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewExcluirClienteGerenciarCliente"
        android:layout_below="@+id/textViewGerenciarVendedor"
        android:layout_marginTop="98dp"
        android:onClick="atualizarVendedor"
        android:src="@drawable/atualizar_pessoa" />

    <ImageButton
        android:id="@+id/textViewExcluirVendedorGerenciarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewExcluirClienteGerenciarCliente"
        android:layout_below="@+id/imageButtonAtualizarVendedorTelaGerenciarVendedor"
        android:layout_marginTop="57dp"
        android:onClick="excluirVendedor"
        android:src="@drawable/remover_pessoa" />

</RelativeLayout>