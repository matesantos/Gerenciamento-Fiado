<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AtualizarClienteActivity" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerTelefoneAtualizarCliente"
        android:layout_alignLeft="@+id/editText1"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/endereco"
        android:textColor="@color/White"
        android:textSize="@dimen/tamanhoDosLabels" />

    <TextView
        android:id="@+id/textViewTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EditText01"
        android:layout_alignLeft="@+id/spinnerTelefoneAtualizarCliente"
        android:text="@string/telefone"
        android:textColor="@color/White"
        android:textSize="@dimen/tamanhoDosLabels" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="30dp"
        android:text="@string/numeroCasa"
        android:textColor="@color/White"
        android:textSize="@dimen/tamanhoDosLabels" />

    <EditText
        android:id="@+id/editTextNumeroCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/editText1"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonPesquisarCliente"
        android:layout_alignBottom="@+id/buttonPesquisarCliente"
        android:layout_alignRight="@+id/EditText01"
        android:text="@string/salvar" />

    <Spinner
        android:id="@+id/spinnerTelefoneAtualizarCliente"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/editText1" />

    <EditText
        android:id="@+id/editTextCEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextNumeroCasa"
        android:layout_below="@+id/editTextNumeroCasa"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCEP"
        android:layout_alignBottom="@+id/editTextCEP"
        android:layout_alignLeft="@+id/textViewTelefone"
        android:text="@string/cep"
        android:textColor="@color/White"
        android:textSize="@dimen/tamanhoDosLabels" />

    <Button
        android:id="@+id/buttonPesquisarCliente"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerTelefoneAtualizarCliente"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/editText1"
        android:text="@string/apagar" />

</RelativeLayout>